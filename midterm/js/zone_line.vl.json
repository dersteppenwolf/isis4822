{
    "$schema": "https://vega.github.io/schema/vega-lite/v3.0.0-rc6.json",
    "data": {
        "url": "data/zones.csv"
    },
    "transform": [
        {
            "timeUnit": "year",
            "field": "year",
            "as": "year"
        },
        {
            "window": [
                {
                    "op": "mean",
                    "field": "temp",
                    "as": "Average_Temp"
                }
            ],
            "sort": [
                {
                    "field": "year",
                    "order": "ascending"
                }
            ],
            "ignorePeers": false,
            "groupby": [
                "zone"
            ],
            "frame": [
                11,
                0
            ]
        }
    ],
    "vconcat": [
        {
            "description": "Moving Average of Temperature per Zone",
            "mark": {
                "type": "line",
                "strokeWidth": 3,
                "opacity": 0.9
            },
            "width": 1100,
            "height": 420,
            "encoding": {
                "x": {
                    "field": "year",
                    "type": "temporal",
                    "title": "Year",
                    "scale": {
                        "domain": {
                            "selection": "brush"
                        }
                    },
                    "axis": {
                        "labelAngle": -30,
                        "format": "%Y"
                    }
                },
                "y": {
                    "field": "Average_Temp",
                    "type": "quantitative"
                },
                "color": {
                    "field": "zone",
                    "type": "nominal",
                    "title": "Zone",
                    "legend": {
                        "direction": "horizontal",
                        "orient": "top",
                        "padding": 5
                    }
                }
            }
        },
        {
            "width": 1100,
            "height": 60,
            "mark": "line",
            "selection": {
                "brush": {
                    "type": "interval",
                    "encodings": [
                        "x"
                    ]
                }
            },
            "encoding": {
                "x": {
                    "field": "year",
                    "timeUnit": "year",
                    "type": "temporal",
                    "title": "Year",
                    "axis": {
                        "labelAngle": -30,
                        "format": "%Y"
                    }
                },
                "y": {
                    "field": "temp",
                    "title": "Temperature",
                    "type": "quantitative",
                    "axis": {
                        "tickCount": 3,
                        "grid": true
                    }
                }
            }
        }
    ]
}