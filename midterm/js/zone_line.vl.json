{
    "$schema": "https://vega.github.io/schema/vega-lite/v3.0.0-rc6.json",
    "data": {
        "url": "data/zones.csv"
    },
    "transform": [
        {
            "timeUnit": "year",
            "field": "year",
            "as": "year"
        },
        {
            "window": [
                {
                    "op": "mean",
                    "field": "temp",
                    "as": "Average_Temp"
                }
            ],
            "sort": [
                {
                    "field": "year",
                    "order": "ascending"
                }
            ],
            "ignorePeers": false,
            "groupby" : ["zone"],
            "frame": [
                11,
                0
            ]
        }
    ],
    "description": "Stock prices of 5 Tech Companies over Time.",
    "mark": "line",
    "width": 1200,
    "height": 420,
    "autosize": {
        "type": "fit",
        "contains": "padding"
    },
    "encoding": {
        "x": {
            "field": "year",
            "type": "temporal"
        },
        "y": {
            "field": "Average_Temp",
            "type": "quantitative"
        },
        "color": {
            "field": "zone",
            "type": "nominal"
        }
    }
}