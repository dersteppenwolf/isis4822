{
    "$schema": "https://vega.github.io/schema/vega-lite/v3.0.0-rc6.json",
    "data": {
        "url": "data/tmp_moving_average.csv"
    },
    "title": "Montly Mean Temperature",
    "width": 1200,
    "height": 350,

    "layer": [

        {
            "mark": {
                "type": "line", "opacity": 0.1
                
            },  
            
            "encoding": {
                "x": {
                    "field": "month_fmt",
                    "timeUnit": "yearmonth",
                    "type": "ordinal",
                    "title": "Year",
                    "axis": {
                        "labelAngle": -30,
                        "format": "%Y"
                    }
                },
                "y": {
                    "field": "temp",
                    "type": "quantitative"
                }, 
                "color": {"value": "#3690c0" }
                
            }
        },


        {
            "mark": {
                "type": "line", "opacity": 0.6
                
            },  
            
            "encoding": {
                "x": {
                    "field": "month_fmt",
                    "timeUnit": "yearmonth",
                    "type": "ordinal",
                    "title": "Year",
                    "axis": {
                        "labelAngle": -30,
                        "format": "%Y"
                    }
                },
                "y": {
                    "field": "tma_6",
                    "type": "quantitative"
                }, 
                "color": {"value": "#2171b5" }
                
            }
        },

        {
            "mark": {
                "type": "line", "opacity": 0.5
            },  
            
            "encoding": {
                "x": {
                    "field": "month_fmt",
                    "timeUnit": "yearmonth",
                    "type": "ordinal",
                    "title": "Year",
                    "axis": {
                        "labelAngle": -30,
                        "format": "%Y"
                    }
                },
                "y": {
                    "field": "tma_60",
                    "type": "quantitative"
                }, 
                "color": {"value": "#eff3ff"}
            }
        },

        {
            "mark": {
                "type": "line"
                
            },  
            
            "encoding": {
                "x": {
                    "field": "month_fmt",
                    "timeUnit": "yearmonth",
                    "type": "ordinal",
                    "title": "Year",
                    "axis": {
                        "labelAngle": -30,
                        "format": "%Y"
                    }
                },
                "y": {
                    "field": "tma_132",
                    "type": "quantitative",
                    "title": "Temperature"
                }, 
                "color": {"value": "#fd8d3c" }
                
            }
        }

    ]

    
  }