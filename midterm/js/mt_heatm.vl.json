{
    "$schema": "https://vega.github.io/schema/vega-lite/v3.0.0-rc6.json",
    "data": {
        "url": "data/tmp_moving_average.csv"
    },
    "title": "Montly Mean Temperature",
    "config": {
        "view": {
            "strokeWidth": 0
        },
        "scale": {
            "rangeStep": 13
        },
        "axis": {
            "domain": false
        }
    },
    "mark": "rect",   
    "width": 1200,
    "height": 250,
    "autosize": {
      "type": "fit",
      "contains": "padding"
    },
    "encoding": {
        "x": {
            "field": "month_fmt",
            "timeUnit": "year",
            "type": "ordinal",
            "title": "Year",
            "axis": {
                "labelAngle": -30,
                "format": "%Y"
            }
        },
        "y": {
            "field": "month_fmt",
            "timeUnit": "month",
            "type": "ordinal",
            "title": "Month"
        },
        "color": {
            "field": "temp",
            "aggregate": "mean",
            "type": "quantitative",
            "scale": {
                "range": ["#2166ac","#67a9cf","#f7f7f7","#ef8a62","#b2182b"]
            },
            "legend": {
                "title": "Avg Temp"
            }
        }
    }
  }